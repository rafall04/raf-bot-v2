# Application Configuration
NODE_ENV=production
PORT=3100
APP_NAME=RAF_BOT

# JWT Secret (Generate a random 32+ character string)
JWT_SECRET=CHANGE_THIS_TO_RANDOM_32_CHARACTER_STRING

# Database
DATABASE_PATH=./database.sqlite

# WhatsApp Session
SESSION_NAME=raf

# API Keys (Replace with actual keys)
TOKOPAY_KEY=YOUR_TOKOPAY_KEY_HERE
TOKOPAY_MERCHANT=YOUR_TOKOPAY_MERCHANT_HERE
IPAYMU_SECRET=YOUR_IPAYMU_SECRET_HERE
IPAYMU_VA=YOUR_IPAYMU_VA_HERE
IPAYMU_CALLBACK=YOUR_CALLBACK_URL_HERE

# GenieACS Configuration
GENIEACS_URL=http://YOUR_GENIEACS_IP:7557

# MikroTik Configuration (Optional)
MIKROTIK_HOST=YOUR_MIKROTIK_IP
MIKROTIK_USER=YOUR_MIKROTIK_USER
MIKROTIK_PASSWORD=YOUR_MIKROTIK_PASSWORD
MIKROTIK_PORT=8728

# Site Configuration
SITE_URL=https://yourdomain.com

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Debug flags for verbose logging (set to 'true' to enable)
# PSB_DEBUG=true       # PSB database operations
# TICKET_DEBUG=true    # Ticket system operations
# NOTIF_DEBUG=true     # Notification tracking
# STATS_DEBUG=true     # Stats and monitoring

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Session Secret
SESSION_SECRET=CHANGE_THIS_TO_ANOTHER_RANDOM_STRING

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Backup Configuration
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=30

# Redis Configuration (Optional, for caching)
REDIS_URL=redis://localhost:6379

# Sentry Configuration (Optional, for error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Feature Flags
ENABLE_AUTO_BACKUP=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_WEBHOOK_NOTIFICATIONS=false

# Webhook URLs (Optional)
WEBHOOK_URL_TICKET_CREATED=
WEBHOOK_URL_PAYMENT_RECEIVED=
WEBHOOK_URL_ERROR_ALERT=
